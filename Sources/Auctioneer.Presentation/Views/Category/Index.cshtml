@model CategoryIndexViewModel

@{
	Layout        = "~/Views/Shared/_Layout_with_search_and_breadcrumb.cshtml";
	ViewBag.Title = "Index";
}

<div class="category-auction-container">

	@{ Html.RenderPartial("_List", Model.Category); }
	
	<main class="auction-list">
		
		@{ Html.RenderPartial("_AuctionSortOrder", Model.CurrentSortOrder); }
		@Html.DisplayFor(x => x.Auctions)
		@{ Html.RenderPartial("_AuctionPagination", Model.Auctions); }

	</main>
</div>



