@model IEnumerable<AuctionViewModel>

@{
	Layout        = "~/Views/Shared/_Layout_with_search_and_breadcrumb.cshtml";
	ViewBag.Title = "Welcome";
}

@section Header
{
	<div class="jumbotron">
		<h1>Auctioneer</h1>
		<p class="lead">Auctioneer is a platform for buying and selling anything you want.</p>
	</div>
}

<div class="category-auction-container">
	
	@{ Html.RenderAction("TopCategories", "Category"); }
	
	<main class="auction-list">
		
		<h1>@Resources.MostRecentAuctions</h1>

		@Html.DisplayForModel()

	</main>
</div>
