@model Auctioneer.Presentation.Models.CategoryListViewModel

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div style="width:100%; display:flex;">
	
	@{ Html.RenderAction("TopCategories", "Category"); }

    <table style="width:100%">
        <tr>
            <th>
                @Html.DisplayNameFor(x => x.Auctions.First().Title)
            </th>
            <th>
                @Html.DisplayNameFor(x => x.Auctions.First().Price)
            </th>
            <th>
                @Html.DisplayNameFor(x => x.Auctions.First().TimeTillEnd)
            </th>
        </tr>
        @foreach(var auction in Model.Auctions)
        {
            <tr>
                <td>
                    <a href="@Url.Action("Show", "Auction", new { id = auction.Id })">@Html.DisplayFor(x => auction.Title)</a>
                </td>
                <td>
                    @Html.DisplayFor(x => auction.Price)
                </td>
                <td>
                    @Html.DisplayFor(x => auction.TimeTillEnd)
                </td>
            </tr>
        }
    </table>
</div>
