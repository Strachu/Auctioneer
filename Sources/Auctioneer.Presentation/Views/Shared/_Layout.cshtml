@using StackExchange.Profiling;
@using Lang = Auctioneer.Resources.Shared.Layout;

<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - Auctioneer</title>

	@Styles.Render("~/bundles/CSS")
	@RenderSection("Head", required: false)
	@Scripts.Render("~/bundles/modernizr")
</head>
<body>
	<div class="navbar navbar-inverse navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				@Html.ActionLink("Auctioneer", areaName: String.Empty, controllerName: "Home", actionName: "Index",
				                 cssClass: "navbar-brand")
			</div>
			
			@{ Html.RenderPartial("_TopMenu"); }
		</div>
	</div>

	<div class="container page-body">
		@RenderBody()
		<hr />
		<footer>
			<p>Copyright &copy; @DateTime.Now.Year Patryk Strach</p>
		</footer>
	</div>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/jqueryval")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)

	@MiniProfiler.RenderIncludes()
</body>
</html>
