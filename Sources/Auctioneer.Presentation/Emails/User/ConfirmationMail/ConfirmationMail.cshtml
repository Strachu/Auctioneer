@model ConfirmationMail

@{
	Layout = null;

	var confirmationLinkUrl = Url.Action(controllerName: "User", actionName: "ConfirmMail", protocol: Request.Url.Scheme,
	                                     routeValues: new
													 {
														 userId       = Model.UserId,
														 confirmToken = Model.ConfirmToken
													 });
}

To: @Model.To
Subject: Welcome to Auctioneer
Content-Type: text/html; charset=utf-8

<html>
	<body>
		<p>Hello @Model.UserFirstName,</p>
		<p>You have successfully registered your account at Auctioneer system.</p>
		<p>
			To activate your account click or copy and paste into your browser's address bar the following link:<br />
			<a href="@confirmationLinkUrl">@confirmationLinkUrl</a>
		</p>
	</body>
</html>
